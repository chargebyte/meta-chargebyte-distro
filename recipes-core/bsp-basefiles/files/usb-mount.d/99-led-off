#!/bin/sh

ACTION="$1"
MOUNTPOINT="$2"

[ "$ACTION" = "add" ] || exit 0

MODEL=$(tr -d '\0' < /proc/device-tree/model)

case "$MODEL" in
"I2SE EVAcharge SE")
	LED="evse:yellow:led1"
	;;
"chargebyte Tarragon"*)
	LED="yellow:programming"
	;;
"I2SE Tarragon"*)
	LED="evse:yellow:led2"
	;;
*)
	exit 0
esac

. /lib/led.sh
led_off "$LED"
